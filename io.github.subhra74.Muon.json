{
	"app-id": "io.github.subhra74.Muon",
	"runtime": "org.freedesktop.Platform",
	"runtime-version": "24.08",
	"sdk": "org.freedesktop.Sdk",
	"sdk-extensions": [
		"org.freedesktop.Sdk.Extension.openjdk"
	],
	"command": "muon",
	"finish-args": [
		"--share=ipc",
		"--socket=x11",
		"--socket=ssh-auth",
		"--share=network",
		"--filesystem=xdg-download",
		"--filesystem=~/snowflake-ssh",
		"--env=PATH=/app/jre/bin:/usr/bin:/app/bin"
	],
	"modules": [
		{
			"name": "openjdk",
			"buildsystem": "simple",
			"build-commands": [
				"/usr/lib/sdk/openjdk/install.sh"
			]
		},
		{
			"name": "snowflake",
			"buildsystem": "simple",
			"build-commands": [
				"install -Dm644 snowflake.jar -t /app/muon",
				"install -Dm755 muon -t /app/bin",
				"install -Dm644 io.github.subhra74.Muon.png -t /app/share/icons/hicolor/128x128/apps",
				"install -Dm644 io.github.subhra74.Muon.desktop -t /app/share/applications",
				"install -Dm644 io.github.subhra74.Muon.metainfo.xml -t /app/share/metainfo"
			],
			"sources": [
				{
					"type": "file",
					"url": "https://github.com/subhra74/snowflake/releases/download/v1.0.4/snowflake.jar",
					"sha256": "cc1768e5ce7038d26a893e00066e4d8bed2f42c1ba75b960b324471c5eab74c1"
				},
				{
					"type": "file",
					"path": "io.github.subhra74.Muon.png"
				},
				{
					"type": "file",
					"path": "io.github.subhra74.Muon.desktop"
				},
				{
					"type": "file",
					"path": "io.github.subhra74.Muon.metainfo.xml"
				},
				{
					"type": "script",
					"dest-filename": "muon",
					"commands": [
						"java -jar /app/muon/snowflake.jar"
					]
				}
			]
		}
	]
}
